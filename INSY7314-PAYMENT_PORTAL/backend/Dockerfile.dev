FROM node:20-alpine
WORKDIR /usr/src/app

# install dependencies
COPY package*.json ./
RUN npm ci

# copy source
COPY . .

ENV NODE_ENV=development
ENV PORT=4001
EXPOSE 4001

# healthcheck for CI + compose
RUN apk add --no-cache curl
HEALTHCHECK --interval=5s --timeout=3s --retries=60 \
  CMD curl -fsS "http://127.0.0.1:${PORT:-4001}/health" || exit 1

CMD ["npm", "run", "dev"]
